{
  "compilerOptions": {
    "outDir": "../../../../build",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "lib": [ "es2015", "dom" ]
  },
  "files": [
    "./index.ts"
